#loginModal.modal.fade(tabindex="-2" role="dialog" data-keyboard="true" aria-labelledby="loginModalLabel")
  .modal-dialog
    .modal-content
      .modal-body(ng-init="tab = 1")
        ul.nav.nav-pills
          li(ng-click="tab = 1" ng-class="{active: tab === 1}")
            a Login
          li(ng-click="tab = 2" ng-class="{active: tab === 2}")
            a Signup
          li(ng-click="facebookAuth()")
            a Facebook

        hr
        .alert.alert-warning(ng-show="message.length > 0")
          p(ng-bind="message")
        form(ng-show="tab === 1")
          .form-group
            label(for="email") Username:
            input#email.form-control(ng-model="loginData.username" placeholder="Email")
          .form-group
            label(for="email") Password:
            input#email.form-control(ng-model="loginData.password" type="password" placeholder="Password")
          button.btn.btn-default(ng-click="login()") Login

        form(ng-show="tab === 2")
          .form-group
            label(for="email") Email:
            input#email.form-control(ng-model="signupData.email" placeholder="Email")
          .form-group
            label(for="email") Username:
            input#email.form-control(ng-model="signupData.username" placeholder="Email")
          .form-group
            label(for="email") Password:
            input#email.form-control(ng-model="signupData.password" type="password" placeholder="Password")
          button.btn.btn-default(ng-click="signup()") Signup

